<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koelkast_App.UserBalancePage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame Padding="24" CornerRadius="0">
                    <Label Text="Drank voorraad" HorizontalTextAlignment="Center" FontSize="36"/>
                </Frame>
                <StackLayout Orientation="Horizontal" Margin="5, 0">
                    <Button x:Name="Settings_Btn" Text="Settings" HorizontalOptions="FillAndExpand" Clicked="Settings_Btn_Clicked"/>
                    <Button x:Name="Logout_Btn" Text="Logout" HorizontalOptions="FillAndExpand" Clicked="Logout_Btn_Clicked"/>
                </StackLayout>
                <Label Text="Huidige balans: 17 Caps" FontSize="24" HorizontalTextAlignment="Center"/>
                <!-- Separating horizontal line -->
                <BoxView HorizontalOptions="FillAndExpand" HeightRequest="3" Color="{StaticResource BannerBackground}"/>
                <Label Text="Gemiddeld 3 weken: 20 Caps" FontSize="24"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>