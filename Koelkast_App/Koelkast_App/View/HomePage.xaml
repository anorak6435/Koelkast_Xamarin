<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Koelkast_App.View"
            x:Class="Koelkast_App.View.HomePage"
            BarBackgroundColor="{StaticResource BannerBackground}"
            NavigationPage.HasBackButton="False"
            x:Name="TabbedHomePage">
    <NavigationPage.TitleView>
        <Label Text="Koelkast" HorizontalTextAlignment="Center" FontSize="36"/>
    </NavigationPage.TitleView>
    <!--Pages can be added as references or inline-->
    <local:HomeOptionsPage Title="Thuis" />
    <local:SettingsPage Title="Instellingen" />
    <!--<local:LoginPage Title="inloggen" />-->
</TabbedPage>