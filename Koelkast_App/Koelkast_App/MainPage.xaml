<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koelkast_App.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Drank voorraad" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Personal koelkast management" FontSize="Title" Padding="30,10,30,10" />
        <Label Text="In de koelkast staan je een paar biertjes voor je klaar." FontSize="16" Padding="30,0,30,0"/>
        <Label
               VerticalOptions="CenterAndExpand" />
        <Button x:Name="LoginBtn" Text="Login" Clicked="LoginBtn_Clicked" VerticalOptions="End"/>
        <Button x:Name="RegisterBtn" Text="Register" Clicked="RegisterBtn_Clicked"/>
    </StackLayout>

</ContentPage>
