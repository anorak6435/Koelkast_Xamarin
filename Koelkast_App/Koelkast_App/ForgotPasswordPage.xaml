<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koelkast_App.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Wachtwoord vergeten" FontSize="18px"
                HorizontalOptions="CenterAndExpand" />

            <Grid Margin="20,0,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Email:" Grid.Row="0" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
                <Entry x:Name="UserEmail" Placeholder="Email" Grid.Row="0" Grid.Column="1"/>
                <Button x:Name="SendMailBtn" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="Send Mail" Clicked="SendMailBtn_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>